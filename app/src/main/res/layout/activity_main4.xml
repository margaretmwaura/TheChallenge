<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="com.example.android.myapplication.Main4Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/checkboxX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="23sp"
            android:buttonTint="@color/colorAccent"
            android:textColor="@color/colorAccent"
            android:onClick="checkboxChecked"
            />

        <CheckBox
            android:id="@+id/checkboxO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="23sp"
            android:onClick="checkboxChecked"
            android:buttonTint="@color/colorAccent"
            android:textColor="@color/colorAccent"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:layout_marginRight="10px"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="15px"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:onClick="Reset"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5Grid"
                 android:layout_marginRight="10px"
            android:layout_marginBottom="10px"
            android:onClick="gridFive"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exit"

            android:layout_marginRight="10px"
            android:layout_marginBottom="10px"
            android:onClick="Exit"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:textAllCaps="true"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:id="@+id/cell11"
            android:background="#cdaf95"
            android:textSize="23sp"
            android:layout_marginRight="10px"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="138dp"
            android:layout_height="match_parent"
            android:id="@+id/cell12"
            android:textSize="23sp"
            android:layout_marginRight="10px"
            android:background="#cdaf95"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="135dp"
            android:textSize="23sp"
            android:layout_marginRight="10px"
            android:layout_height="match_parent"
            android:id="@+id/cell13"
            android:background="#cdaf95"
            android:onClick="buttonClicked"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:id="@+id/cell21"
            android:textSize="23sp"
            android:layout_marginTop="10px"
            android:layout_marginRight="10px"
            android:background="#cdaf95"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="138dp"
            android:layout_height="match_parent"
            android:id="@+id/cell22"
            android:textSize="23sp"
            android:layout_marginTop="10px"
            android:layout_marginRight="10px"
            android:background="#cdaf95"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="135dp"
            android:textSize="23sp"
            android:layout_height="match_parent"
            android:id="@+id/cell23"
            android:layout_marginTop="10px"
            android:layout_marginRight="10px"
            android:background="#cdaf95"
            android:onClick="buttonClicked"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:id="@+id/cell31"
            android:textSize="23sp"
            android:layout_marginTop="10px"
            android:layout_marginRight="10px"
            android:background="#cdaf95"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="138dp"
            android:layout_height="match_parent"
            android:id="@+id/cell32"
            android:textSize="23sp"
            android:layout_marginTop="10px"
            android:layout_marginRight="10px"
            android:background="#cdaf95"
            android:onClick="buttonClicked"/>
        <Button
            android:layout_width="135dp"
            android:textSize="23sp"
            android:layout_height="match_parent"
            android:id="@+id/cell33"
            android:layout_marginTop="10px"
            android:layout_marginRight="10px"
            android:background="#cdaf95"
            android:onClick="buttonClicked"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Player X"
            android:textSize="23sp"
            android:textColor="@color/colorAccent"
            android:id="@+id/PlayerX"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Player O"
            android:textColor="@color/colorAccent"
            android:textSize="23sp"
            android:id="@+id/Player0"/>
        <Button
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:text="NewGame"
            android:layout_marginRight="10px"
            android:layout_marginBottom="10px"
            android:layout_marginTop="10px"
            android:onClick="newGame"
            android:layout_height="match_parent"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Games played"
            android:textColor="@color/colorAccent"
            android:textSize="23sp"
            android:id="@+id/cell60" />

    </LinearLayout>

</LinearLayout>
